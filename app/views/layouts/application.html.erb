  <%= csrf_meta_tags %>
</head>
<body>
    <div id ='cssmenu'>
      <ul>
       <li class='active has-sub'> <%= link_to "Blog", '/articles' %>
         <ul>
           <li><%=link_to "Tech",'#Tech' %></li>
           <li class='last'><%= link_to "Business",'#Business' %></li>
         </ul>
       </li>
       <li class='active has-sub'><%= link_to "Ressources", '#ressources' %>
         <ul>
           <li ><%=link_to "Quotes",'/quotes' %></li>
           <li class='last'><%= link_to "Sources",'#sources' %></li>
         </ul>
       <li class='last'><%= link_to "Log in", '#' %></li>
      </ul>
    </div> 

  <%= yield %>



  <footer>
    <%= link_to 'Back', articles_path %>
    <% if @article == 0  %>
      <%= link_to 'Edit', edit_article_path(@article) %>
    <% else %>
      <% print  @article %>
    <% end %>
  </footer>

