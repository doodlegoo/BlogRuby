  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <%= ActionController::Base.helpers.link_to image_tag("header.jpg"), '/articles'%>
    <nav>
      <ul class="nav navbar-nav navbar-right">
       <li><%= link_to "Accueil", '/articles' %></li>
       <li><%= link_to "Citations", '/quotes' %></li>
       <li><%= link_to "Log in", '#' %></li>
      </ul>
</nav>  </header>

  <%= yield %>



  <footer>
    <%= link_to 'Back', articles_path %>
    <% if @article == 0  %>
      <%= link_to 'Edit', edit_article_path(@article) %>
    <% else %>
      <% print  @article %>
    <% end %>
  </footer>

